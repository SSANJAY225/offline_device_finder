<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedActivity"
    android:background="#101f37">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="FEEDBACK"
        android:textSize="50dp"
        android:textColor="#e9b"
        android:textAlignment="center"
        android:layout_marginTop="100dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Rate Us:"
        android:textColor="#e9b"
        android:textSize="25dp"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="20dp"></TextView>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize=".5"
        android:rating="2.5"
        android:id="@+id/rbRate"
        android:outlineAmbientShadowColor="#e9b"
        android:outlineSpotShadowColor="#e9b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Feedback"
        android:textSize="25dp"
        android:textColor="#e9b"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="20dp"></TextView>

    <Button
        android:id="@+id/btnbk"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:background="@android:color/transparent"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <EditText
        android:id="@+id/feedbk"
        android:layout_width="279dp"
        android:layout_height="110dp"
        android:ems="10"
        android:gravity="start|top"
        android:alpha="0.5"
        android:background="@drawable/input_field"
        android:backgroundTint="@null"
        android:hint="Your Feedback here"
        android:inputType="textMultiLine"
        android:textColor="#e9b"
        android:textColorHint="#e9b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#101f37"
        android:background="@drawable/oval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

</android.support.constraint.ConstraintLayout>